<div class="outer">
					<div class="pane">							
						<div class="centered-text section centered-400 rounded offshadow">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, :class=> "form-control", :placeholder=>"Email" %>

  <%= f.password_field :password, :class=> "form-control", :placeholder=>"Password" %>

  <%= f.password_field :password_confirmation, :class=> "form-control", :placeholder=>"Password Confrimation" %>

<%= f.submit "Sign up", :class=>"btn btn-danger btn-lg btn-block " %>
<% end %>


<%= render "devise/shared/links" %>
</div>
</div>
</div>
